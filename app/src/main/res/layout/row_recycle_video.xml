<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_doctor"/>


            <TextView
                android:id="@+id/idname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:layout_toRightOf="@id/image_doctor"
                android:padding="3dp"
                android:textSize="18dp"
                android:fontFamily="@font/amaranth"
                android:text="Example heading"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/idSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:padding="3dp"
                android:layout_toRightOf="@id/image_doctor"
                android:layout_below="@id/idname"
                android:fontFamily="@font/amaranth"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="Example heading" />


            <TextView
                android:id="@+id/idTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:padding="3dp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_toRightOf="@id/image_doctor"
                android:layout_below="@id/idSpecialization"
                android:text="Example heading" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>

